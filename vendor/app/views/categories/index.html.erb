<h1>Категорії</h1>

<div class="card mb-4">
  <div class="card-body">
    <%= form_with(url: categories_path, method: :get, class: "row g-3", local: true) do |form| %>
      <div class="col-md-6">
        <%= form.text_field :search, value: params[:search], placeholder: "Пошук категорій...", class: "form-control" %>
      </div>
      <div class="col-12">
        <%= form.submit "Пошук", class: "btn btn-primary" %>
        <%= link_to "Скинути", categories_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="mb-3 d-flex justify-content-between">
  <%= link_to "Нова категорія", new_category_path, class: "btn btn-primary" %>
  <div>
    <span>Сортувати за: </span>
    <%= link_to "Назвою", categories_path(sort: "name", direction: params[:direction] == "asc" && params[:sort] == "name" ? "desc" : "asc", search: params[:search]), class: "btn btn-sm #{params[:sort] == 'name' ? 'btn-info' : 'btn-outline-info'}" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if @categories.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Назва</th>
            <th>Дії</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <%= link_to "Детальніше", category, class: "btn btn-sm btn-info" %>
                <%= link_to "Редагувати", edit_category_path(category), class: "btn btn-sm btn-warning" %>
                <%= link_to "Видалити", category, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Ви впевнені?" }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @categories %>
      </div>
    <% else %>
      <div class="alert alert-info">Не знайдено жодної категорії</div>
    <% end %>
  </div>
</div>