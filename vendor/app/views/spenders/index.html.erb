<h1>Платники</h1>

<div class="card mb-4">
  <div class="card-body">
    <%= form_with(url: spenders_path, method: :get, class: "row g-3", local: true) do |form| %>
      <div class="col-md-6">
        <%= form.text_field :search, value: params[:search], placeholder: "Пошук платників...", class: "form-control" %>
      </div>
      <div class="col-12">
        <%= form.submit "Пошук", class: "btn btn-primary" %>
        <%= link_to "Скинути", spenders_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="mb-3 d-flex justify-content-between">
  <%= link_to "Новий платник", new_spender_path, class: "btn btn-primary" %>
  <div>
    <span>Сортувати за: </span>
    <%= link_to "Ім'ям", spenders_path(sort: "name", direction: params[:direction] == "asc" && params[:sort] == "name" ? "desc" : "asc", search: params[:search]), class: "btn btn-sm #{params[:sort] == 'name' ? 'btn-info' : 'btn-outline-info'}" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if @spenders.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Ім'я</th>
            <th>Кількість витрат</th>
            <th>Загальна сума</th>
            <th>Дії</th>
          </tr>
        </thead>
        <tbody>
          <% @spenders.each do |spender| %>
            <tr>
              <td><%= spender.name %></td>
              <td><%= spender.expenses.count %></td>
              <td><%= number_to_currency(spender.expenses.sum(:amount), unit: "₴") %></td>
              <td>
                <%= link_to "Детальніше", spender, class: "btn btn-sm btn-info" %>
                <%= link_to "Редагувати", edit_spender_path(spender), class: "btn btn-sm btn-warning" %>
                <%= link_to "Видалити", spender, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Ви впевнені?" }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @spenders %>
      </div>
    <% else %>
      <div class="alert alert-info">Не знайдено жодного платника</div>
    <% end %>
  </div>
</div>