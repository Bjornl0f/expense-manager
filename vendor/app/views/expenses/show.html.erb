<div class="card">
  <div class="card-header">
    <h1>Деталі витрати</h1>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Дата:</dt>
      <dd class="col-sm-9"><%= @expense.date.strftime("%d.%m.%Y") %></dd>

      <dt class="col-sm-3">Сума:</dt>
      <dd class="col-sm-9"><%= number_to_currency(@expense.amount, unit: "₴") %></dd>

      <dt class="col-sm-3">Опис:</dt>
      <dd class="col-sm-9"><%= @expense.description %></dd>

      <dt class="col-sm-3">Платник:</dt>
      <dd class="col-sm-9""><span class="badge bg-primary"><%= expense.spender.name %></span></dd>

      <dt class="col-sm-3">Категорії:</dt>
      <dd class="col-sm-9">
        <% @expense.categories.each do |category| %>
          <span class="badge bg-info"><%= category.name %></span>
        <% end %>
      </dd>

      <dt class="col-sm-3">Способи оплати:</dt>
      <dd class="col-sm-9">
        <% @expense.payment_methods.each do |payment_method| %>
          <span class="badge bg-secondary"><%= payment_method.name %></span>
        <% end %>
      </dd>
    </dl>
  </div>
  <div class="card-footer">
    <%= link_to "Редагувати", edit_expense_path(@expense), class: "btn btn-warning" %>
    <%= link_to "Назад", expenses_path, class: "btn btn-secondary" %>
  </div>
</div>