<h1>Способи оплати</h1>

<div class="card mb-4">
  <div class="card-body">
    <%= form_with(url: payment_methods_path, method: :get, class: "row g-3", local: true) do |form| %>
      <div class="col-md-6">
        <%= form.text_field :search, value: params[:search], placeholder: "Пошук способів оплати...", class: "form-control" %>
      </div>
      <div class="col-12">
        <%= form.submit "Пошук", class: "btn btn-primary" %>
        <%= link_to "Скинути", payment_methods_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="mb-3 d-flex justify-content-between">
  <%= link_to "Новий спосіб оплати", new_payment_method_path, class: "btn btn-primary" %>
  <div>
    <span>Сортувати за: </span>
    <%= link_to "Назвою", payment_methods_path(sort: "name", direction: params[:direction] == "asc" && params[:sort] == "name" ? "desc" : "asc", search: params[:search]), class: "btn btn-sm #{params[:sort] == 'name' ? 'btn-info' : 'btn-outline-info'}" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if @payment_methods.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Назва</th>
            <th>Дії</th>
          </tr>
        </thead>
        <tbody>
          <% @payment_methods.each do |payment_method| %>
            <tr>
              <td><%= payment_method.name %></td>
              <td>
                <%= link_to "Детальніше", payment_method, class: "btn btn-sm btn-info" %>
                <%= link_to "Редагувати", edit_payment_method_path(payment_method), class: "btn btn-sm btn-warning" %>
                <%= link_to "Видалити", payment_method, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Ви впевнені?" }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @payment_methods %>
      </div>
    <% else %>
      <div class="alert alert-info">Не знайдено жодного способу оплати</div>
    <% end %>
  </div>
</div>