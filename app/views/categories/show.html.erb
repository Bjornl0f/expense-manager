<div class="card">
  <div class="card-header">
    <h1><%= t('categories.show')%></h1>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3"><%= t('categories.name')%></dt>
      <dd class="col-sm-9"><%= @category.name %></dd>
    </dl>
  </div>
  <div class="card-footer">
    <%= link_to t('common.edit'), edit_category_path(@category), class: "btn btn-warning" %>
    <%= link_to t('common.back'), categories_path, class: "btn btn-secondary" %>
  </div>
</div>