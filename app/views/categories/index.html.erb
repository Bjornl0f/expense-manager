<h1>Категорії</h1>

<div class="mb-3">
  <%= link_to "Нова категорія", new_category_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Назва</th>
          <th>Дії</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to "Детальніше", category, class: "btn btn-sm btn-info" %>
              <%= link_to "Редагувати", edit_category_path(category), class: "btn btn-sm btn-warning" %>
              <%= link_to "Видалити", category, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Ви впевнені?" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>