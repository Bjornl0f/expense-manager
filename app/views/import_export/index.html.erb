<h1><%= t('import_export.title') %></h1>

<div class="row mt-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h3><%= t('import_export.export') %></h3>
      </div>
      <div class="card-body">
        <p><%= t('import_export.export_description') %></p>
        <div class="d-flex gap-2">
          <%= link_to t('import_export.export_json'), export_json_path, class: "btn btn-primary" %>
          <%= link_to t('import_export.export_yaml'), export_yaml_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h3><%= t('import_export.import') %></h3>
      </div>
      <div class="card-body">
        <p><%= t('import_export.import_description') %></p>
        <%= form_with(url: import_path, method: :post, local: true, class: "mt-3", html: { multipart: true }) do %>
          <div class="mb-3">
            <%= label_tag 'file', t('import_export.select_file'), class: "form-label" %>
            <%= file_field_tag 'file', class: "form-control", accept: '.json,.yml,.yaml' %>
          </div>
          <%= submit_tag t('import_export.import_button'), class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to t('common.back'), expenses_path, class: "btn btn-secondary" %>
</div>