<div class="card">
  <div class="card-header">
    <h1><%= t('payment_methods.show')%></h1>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3"><%= t('payment_methods.name')%>:</dt>
      <dd class="col-sm-9"><%= @payment_method.name %></dd>
    </dl>
  </div>
  <div class="card-footer">
    <%= link_to t('common.edit'), edit_payment_method_path(@payment_method), class: "btn btn-warning" %>
    <%= link_to t('common.back'), payment_methods_path, class: "btn btn-secondary" %>
  </div>
</div>