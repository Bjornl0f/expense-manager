<h1>Платники</h1>

<div class="mb-3">
  <%= link_to "Новий платник", new_spender_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Ім'я</th>
          <th>Дії</th>
        </tr>
      </thead>
      <tbody>
        <% @spenders.each do |spender| %>
          <tr>
            <td><%= spender.name %></td>
            <td>
              <%= link_to "Детальніше", spender, class: "btn btn-sm btn-info" %>
              <%= link_to "Редагувати", edit_spender_path(spender), class: "btn btn-sm btn-warning" %>
              <%= link_to "Видалити", spender, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Ви впевнені?" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>